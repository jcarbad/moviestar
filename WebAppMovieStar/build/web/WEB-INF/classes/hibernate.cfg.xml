<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/moviestar?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="cr/ac/una/prograiv/moviestar/domain/Catalogos.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/moviestar/domain/Detalles.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/moviestar/domain/Categorias.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/moviestar/domain/Media.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/moviestar/domain/Ordenes.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/moviestar/domain/Usuarios.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
