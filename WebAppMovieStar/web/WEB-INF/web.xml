<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>MediaServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.MediaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuariosServelt</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.UsuariosServelt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoriasServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.CategoriasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetallesServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.DetallesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogosServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.CatalogosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>CarritoServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.CarritoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdenesServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.moviestar.controller.OrdenesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MediaServlet</servlet-name>
        <url-pattern>/MediaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuariosServelt</servlet-name>
        <url-pattern>/UsuariosServelt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoriasServlet</servlet-name>
        <url-pattern>/CategoriasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetallesServlet</servlet-name>
        <url-pattern>/DetallesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogosServlet</servlet-name>
        <url-pattern>/CatalogosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoServlet</servlet-name>
        <url-pattern>/CarritoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdenesServlet</servlet-name>
        <url-pattern>/OrdenesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
